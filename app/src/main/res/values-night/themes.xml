<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyWithCam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- NAVIGATION -->
    <style name="navigation_style">
        <item name="android:background">@color/blackGray</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="itemIconTint">@drawable/nav_selected_tint_night</item>
        <item name="itemTextColor">@drawable/nav_selected_tint_night</item>
    </style>

    <!-- TEXT STYLE -->
    <style name="context_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbar_text" parent="title_text">
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="subtitle_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="context_text_alert" parent="context_text">
        <item name="android:textColor">@color/mainOrange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle_text_alert" parent="subtitle_text">
        <item name="android:textColor">@color/mainOrange</item>
    </style>

    <style name="timer_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mini_text" parent="context_text">
        <item name="android:textSize">13sp</item>
    </style>


    <!-- Menu -->
    <style name="menu_subTitle" parent="subtitle_text">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Statistic -->
    <style name="timer_text_alert" parent="timer_text">
        <item name="android:textColor">@color/mainOrange</item>
    </style>

    <style name="statistic_fragment_button" parent="title_text">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/statistic_fragment_button_text</item>
        <item name="android:background">@drawable/statistic_fragment_button</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>


    <!-- Button -->
    <style name="button_orange">
        <item name="android:background">@drawable/button_orange_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="menu_button" parent="context_text">
        <item name="android:background">@drawable/menu_button_background</item>
        <item name="android:backgroundTint">@color/blackGray</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_next</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>