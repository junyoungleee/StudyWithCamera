<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.main.StatisticFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/statistic_toolbar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리포트"
            style="@style/toolbar_text"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/statistic_fragment_background"
                android:elevation="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/statistic_day_btn_tv"
                        android:text="일간"
                        style="@style/statistic_fragment_button"/>
                    <TextView
                        android:id="@+id/statistic_week_btn_tv"
                        android:text="주간"
                        style="@style/statistic_fragment_button"/>
                    <TextView
                        android:id="@+id/statistic_month_btn_tv"
                        android:text="월간"
                        style="@style/statistic_fragment_button"/>
               </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp">
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="@color/mainOrange"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/statistic_selected_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00월 00일"
                        style="@style/subtitle_text"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/statistic_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>